include ../StatusDay/Template.Mixin.jade

- attrs = model ? model.attributes : attributes;

.content.status-day
   +statusDay(attrs.note, attrs.styleMarker)
.buttons
   - var id = attrs.id || cid;
   .button(data-type="link", data-name="edit", data-id=id)="Edit"
   .button(data-type="link", data-name="delete", data-id=id)="Delete"
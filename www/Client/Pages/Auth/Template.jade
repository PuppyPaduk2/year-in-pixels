include ../../Page/Template.jade

block headBefore
   +routepage()

block bodyAfterContent
   //- Название проекта
   .name-project.name-project-fixed="Year in pixels"

   //- Кнопки навигации
   .buttons-nav
      .button(type="link", name="sing-in")="Sign in"
      .button(type="link", name="sing-up")="Sign up"

   //- Формы редактирования (Регистрация / Аутентификация)
   .form
      .name-project="Year in pixels"
      input(type="text", name="login", placeholder="Login")
      input(type="password", name="password-1", placeholder="Password")
      input(type="password", name="password-2", placeholder="Password repeat")
      .buttons
         .button(type="block", name="close")="Close"
         .button(type="block", name="send")="Send"